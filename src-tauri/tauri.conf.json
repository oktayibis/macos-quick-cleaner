{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Quick Cleaner",
  "version": "0.1.0",
  "identifier": "com.oktay.quickcleaner",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Quick Cleaner",
        "width": 1200,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "center": true,
        "resizable": true,
        "decorations": true,
        "transparent": false
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "DeveloperTool",
    "shortDescription": "Disk cleanup and optimization for macOS",
    "longDescription": "Quick Cleaner is a powerful macOS utility that helps you reclaim disk space by cleaning caches, developer tools, and finding large or duplicate files.",
    "macOS": {
      "minimumSystemVersion": "11.0"
    }
  }
}
